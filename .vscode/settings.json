{
  "filewatcher.commands": [
    {
      "match": ".*\\.plan$",
      "isAsync": true,
      "cmd": "bash -c 'fecha=$(date +%Y%m%d_%H%M%S); destino=\"${workspaceFolder}/planes-generados/plan_${fecha}.plan\"; mkdir -p \"${workspaceFolder}/planes-generados\"; cp \"${file}\" \"$destino\"; echo \"Plan copiado en: $destino\"'"
    }
  ],
  "pddl.planners": [
    {
      "kind": "COMMAND",
      "path": "/home/cristian/Descargas/planners64/planners/optic-30s",
      "syntax": "$(planner) $(options) $(domain) $(problem)",
      "title": "optic-30s #3",
      "canConfigure": true
    }
  ]
}